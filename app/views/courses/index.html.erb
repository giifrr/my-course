<p style="color: green"><%= notice %></p>

<h1><%= pluralize(Course.count, "course") %></h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @courses.each do |course| %>
    <div class="col">
      <%= render "course", course: course%>
    </div>
  <% end %>
</div>

<%= link_to "New course", new_course_path %>
